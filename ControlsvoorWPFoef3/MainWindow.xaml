<Window x:Class="ControlsvoorWPFoef3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlsvoorWPFoef3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_Open"></MenuItem>
                    <MenuItem Header="_Save"></MenuItem>
                    <Separator/>
                    <MenuItem Header="_Exit"></MenuItem>
                </MenuItem>
                <MenuItem Header="_Help"></MenuItem>
            </Menu>

            <TabControl>
                <TabItem Header="Tab 1">
                    <Label Content="Dit is de eerste tab"></Label>
                </TabItem>
                <TabItem Header="Tab 2">
                    <Expander>
                        <Label Content="Ik ben hidden"></Label>
                    </Expander>
                </TabItem>
                <TabItem Header="Tab 3"></TabItem>
                <TabItem Header="Tab 4"></TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
