<Window x:Class="Comboboxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comboboxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <ComboBox x:Name="cbGender" Text="Man">
            <ComboBoxItem IsSelected="True">
                <Label x:Name="cbiDefaultGender" Content="Man"></Label>
            </ComboBoxItem>
            <ComboBoxItem>
                <Label Content="Vrouw"></Label>
            </ComboBoxItem>
        </ComboBox>
            <ComboBox x:Name="cbAgeCategory"  Text="Minderjarige">
                <ComboBoxItem x:Name="cbiDefaultAC" IsSelected="True">
                    <Label Content="Minderjarige"></Label>
                </ComboBoxItem>
                <ComboBoxItem>
                    <Label Content="Volwassen"></Label>
                </ComboBoxItem>
                <ComboBoxItem>
                    <Label Content="Bejaarde"></Label>
                </ComboBoxItem>
            </ComboBox>
            <Button x:Name="btnConfirm" Content="Bevestig" Width="200" Margin="0 20 0 0" Click="btnConfirm_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
