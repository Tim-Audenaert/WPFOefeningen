<Window x:Class="ClearCopyPaste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClearCopyPaste"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="_Edit">
                    <MenuItem Header="C_lear" Click="Clear"></MenuItem>
                    <MenuItem Command="Copy"></MenuItem>
                    <MenuItem Command="Paste"></MenuItem>
                    <MenuItem Command="Undo"></MenuItem>
                    <MenuItem Command="Redo"></MenuItem>
                </MenuItem>
            </Menu>
            <TextBox x:Name="txtText" AcceptsReturn="True" Height="300"></TextBox>
        </StackPanel>
    </Grid>
</Window>
