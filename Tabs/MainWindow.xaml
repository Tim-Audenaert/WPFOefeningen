        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tabs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tcTabs">
            <TabItem x:Name="Tab1" Header="Tab 1" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="44">
                <TextBox x:Name="tbTab1" TextChanged="tbTab_TextChanged">
                    
                </TextBox>
            </TabItem>
            <TabItem x:Name="Tab2" Header="Tab 2" Height="24" VerticalAlignment="Top">
                <TextBox x:Name="tbTab2" TextChanged="tbTab_TextChanged">
                    
                </TextBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
