<Window x:Class="CheckBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="CheckBoxes">
            <CheckBox Foreground="Red" Content="Rood"></CheckBox>
            <CheckBox Foreground="Orange" Content="Oranje"></CheckBox>
            <CheckBox Foreground="Yellow" Content="Geel"></CheckBox>
            <CheckBox Foreground="Green" Content="Groen"></CheckBox>
            <CheckBox Foreground="Blue" Content="Blauw"></CheckBox>
        </StackPanel>
        <Button x:Name="btnShow" Content="Show" Width="200" Click="ShowCheckedButtons"></Button>
    </Grid>
</Window>
